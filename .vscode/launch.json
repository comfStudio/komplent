{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "firefox",
            "request": "launch",
            "name":"Next: Firefox",
            "reAttach": true,
            "url": "http://localhost:3500",
            "webRoot": "${workspaceFolder}",
            "sourceMaps":"client",
            "pathMappings": [
                {
                    "url": "webpack:///",
                    "path": "${webRoot}"
                }
            ],
            "skipFiles": [
                "node_modules/**/*.js",
                "lib/**/*.js"
              ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Next: Node",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "skipFiles": [
                "node_modules/**/*.js",
                "lib/**/*.js"
              ],
            "port": 9229,
            "console": "integratedTerminal",
            "restart": true
        }
    ],
    "compounds": [
        {
            "name": "Next: Full",
            "configurations": ["Next: Node", "Next: Firefox"]
        }
    ]
}